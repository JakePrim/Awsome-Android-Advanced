.temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather{
  text-align: center;
  font-size: 40rpx;
  opacity: 0.5;
  line-height: 56rpx;/*行高设置为字号的1.4倍*/
}

.weather_wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
}

.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)!important;
  border: none!important;
  padding: 0!important;
}

button{
  line-height: 1;
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-tips{
  margin-top: 10rpx;
  height: 42rpx;
  text-align: center;
}

.weather_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.time{
  display: flex;/** 设置为水平布局 */
  align-items: center;/** 设置垂直居中*/
  justify-content: center;/** 设置水平居中*/
  margin-top:40rpx;
  margin-bottom: 45rpx;
}
.time_icon{
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.time_text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list{
  display: flex;
}

.forecast-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  flex-shrink: 0;
}
.forecast-time{
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 50rpx;
}
.forecast-temp{
  font-size: 40rpx;
  line-height: 56rpx;
}
.weather-day{
  display: flex;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  left: 40rpx;
  right: 40rpx;
  color: rgba(0, 0, 0, 0.5);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.arrow-icon{
  width: 13rpx;
  height: 24rpx;
}
.weather-text{
  text-align: left;
  padding-right: 30rpx;
  flex-grow: 1;/**占用全部的剩余空间*/
}